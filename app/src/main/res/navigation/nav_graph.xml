<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/receipeListFragment">

    <fragment
        android:id="@+id/receipeFragment"
        android:name="com.realitix.mealassistant.fragment.ReceipeFragment"
        android:label="fragment_receipe"
        tools:layout="@layout/fragment_receipe" >
        <argument android:name="receipeId"
            app:argType="long" />
        <action
            android:id="@+id/action_receipeFragment_to_receipeStepFragment"
            app:destination="@id/receipeStepFragment" />
    </fragment>
    <fragment
        android:id="@+id/receipeListFragment"
        android:name="com.realitix.mealassistant.fragment.ReceipeListFragment"
        android:label="Liste des recettes"
        tools:layout="@layout/fragment_receipe_list" >
        <action
            android:id="@+id/action_receipelist_to_single"
            app:destination="@+id/receipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/receipeStepFragment"
        android:name="com.realitix.mealassistant.fragment.ReceipeStepFragment"
        android:label="fragment_receipe_step"
        tools:layout="@layout/fragment_receipe_step" >
        <argument
            android:name="stepId"
            app:argType="long" />
        <argument
            android:name="receipeId"
            app:argType="long" />
    </fragment>
    <action android:id="@+id/action_global_receipeListFragment" app:destination="@id/receipeListFragment"/>
</navigation>